<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar para título y opciones -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="Tus Contraseñas"
        android:titleTextColor="@android:color/white"
        android:elevation="4dp" />

    <!-- RecyclerView para mostrar la lista de contraseñas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPasswords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp" />

    <!-- Botón flotante para agregar una nueva contraseña -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="Agregar contraseña"
        android:tint="@android:color/white" />
</RelativeLayout>
